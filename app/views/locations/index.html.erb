<% provide(:title, "Galleries") %>
<!-- <p id="notice"><%= notice %></p> -->

<h1>Locations</h1>

<%= link_to 'Add Location', new_location_path, class: "btn btn-primary btn-sm" %>
<p></p>
<ul style="list-style-type:none;">
  <% @locations.each do |location| %>
    <li class="span4"> 
      <div class="box">
        <% if location.photos.first %>
        <%# if true %>
          <%= link_to image_tag(location.photos.first.image(:medium)), location_path(location) %>
          <%#= link_to (image_tag location.photos.first.image(:medium)), location %>
        <% else %>
          N/A
        <% end %>
          <p style="text-align: center;">
            <%= location.description %>
            <%= link_to 'Show', location %>
            <%= link_to 'Edit', edit_location_path(location) %>
            <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %>
          </p>
      </div>
    </li>
  <% end %>
</ul>


